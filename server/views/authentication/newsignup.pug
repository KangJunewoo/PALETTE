head
  include ../includes/head.pug

nav.navbar.navbar-transparent.navbar-absolute
  .container
    .navbar-header
      button.navbar-toggle.navbar-toggle-black(type='button' data-toggle='collapse' data-target='#navigation-example-2')
        span.sr-only Toggle navigation
