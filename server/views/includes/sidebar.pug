.sidebar(data-background-color='brown' data-active-color='danger')
    //
      Tip 1: you can change the color of the sidebar's background using: data-background-color="white | brown"
      Tip 2: you can change the color of the active button using the data-active-color="primary | info | success | warning | danger"
    .logo.text-center
        a.simple-text.logo-normal(href='/main')
            | Palette
    .sidebar-wrapper
        .user
            .info
                .photo
                    img(src='/image/default_pic.png')
                a.collapsed(data-toggle='collapse' href='#collapseExample')
                    span
                        | Chet Faker
                        b.caret
                .clearfix
                #collapseExample.collapse
                    ul.nav
                        li#mypage
                            a(href='/mypage')
                                span.sidebar-mini
                                    i.ti-user
                                span.sidebar-normal My Profile
                        li#pfolio
                            a(href='/pfolio')
                                span.sidebar-mini
                                    i.ti-pencil-alt
                                span.sidebar-normal My Portfolio
                        li
                            a(href='/logout')
                                span.sidebar-mini
                                    i.ti-key
                                span.sidebar-normal Sign Out
        ul.nav
            li#exc
                a(data-toggle='collapse' href='#dashboardOverview')
                    i.ti-music
                    p
                        | Extracurricular
                        b.caret

                #dashboardOverview.collapse.in
                    ul.nav
                        li#my_exc
                            a(href='/exc?my=true')
                                span.sidebar-mini My
                                span.sidebar-normal My Activities
                        li#search_exc
                            a(href='/exc')
                                span.sidebar-mini S
                                span.sidebar-normal Search Activities
            li#school
                a(data-toggle='collapse' href='#schoolOptions')
                    i.ti-book
                    p
                        | School
                        b.caret
                #schoolOptions.collapse
                    ul.nav
                        li#my_school
                            a(href='/school?my=true')
