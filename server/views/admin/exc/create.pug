extends ../../layout

block content
  script(language="javascript" type="text/javascript").
    var i=0;
    function addQ(){
      createQ.innerHTML+=
      "<br><input type='text' name='apcnq"+i+"'>"
      i++;
    }
  //enctype에 대해 좀 더 알아보자.
  form(action='/admin/exc/create' method="POST" enctype='multipart/form-data')
    input(type='file' name='file')
    label(for='file') Choose File
    p Name :
    input(name="name" type="text")
    p Information :
    input(name="info" type="text")
    p Location :
    input(name="location" type="text")
    p Gu :
    input(name="gu" type="text")
    p Schedule(event) :
    input(name="sche" type="text")
    p Schedule(date) :     
    input(name="schd" type='date')
    p Contact :
    input(name="contact" type="text")
    p Due Date :
    input(name="due" type="date")
    p Price :
    input(name="price" type="text")
    br
    h3 Choose Palette Type : 
    p Arts
    input(name="palette" type="radio" value="Arts")
    p Academic
    input(name="palette" type="radio" value="Academic")
    p Media
    input(name="palette" type="radio" value="Media")
    p Community
    input(name="palette" type="radio" value="Community")
    p STEM
    input(name="palette" type="radio" value="STEM")
    p Sports
    input(name="palette" type="radio" value="Sports")
    br
    p Questions to ask in Application form :
    p (Max 5 Questions)
    input(type="button" value="Add Question" onclick="addQ()")
    #createQ
    br
    br
    input(type='submit' value='submit')
